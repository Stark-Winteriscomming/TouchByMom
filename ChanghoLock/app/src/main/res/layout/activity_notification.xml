<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mTarget"
        android:layout_weight="3"
        android:text="타겟 앱이 보이는 부분"
        android:layout_marginBottom="113dp"
        android:layout_above="@+id/mTime"
        android:layout_alignLeft="@+id/mTime"
        android:layout_alignStart="@+id/mTime" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mTime"
        android:layout_weight="3"
        android:text="제한시간이 보이는 부분"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_apply"
        android:layout_alignStart="@+id/btn_apply" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="적용"
            android:id="@+id/btn_apply"
            android:layout_alignTop="@+id/btn_cancel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="취소"
            android:id="@+id/btn_cancel"
            android:layout_marginBottom="95dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp" />


</RelativeLayout>
